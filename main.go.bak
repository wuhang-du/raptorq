package main

import (
	"fmt"
	"time"

	"github.com/harmony-one/go-raptorq/pkg/defaults"
)

func main() {
	fmt.Println("hello")
	encode, err := defaults.NewEncoder([]byte(`12345678`), 2, 1, 4, 1)
	if err != nil {
		fmt.Println(err.Error())
		return
	}

	decode, err := defaults.NewDecoder(encode.CommonOTI(), encode.SchemeSpecificOTI())
	if err != nil {
		fmt.Println(err.Error())
	}

	c := make(chan uint8)
	decode.AddReadyBlockChan(c)

	go func() {
		num := <-c
		fmt.Println(num, "is ok")
		buf := make([]byte, 8, 8)
		n, err := decode.SourceBlock(num, buf)
		if err != nil {
			fmt.Println("wrong", err.Error())
		}
		fmt.Println(buf[:n])
		return
	}()

	for i := 0; i < 5; i++ {
		buf := make([]byte, 8, 8)
		writen, err := encode.Encode(0, uint32(i), buf)
		if err != nil {
			fmt.Println(err.Error())
			return
		}

		decode.Decode(0, uint32(i), buf[:int(writen)])
		fmt.Println("success", writen, buf)
	}

	time.Sleep(5 * time.Second)

}
